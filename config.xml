<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tradinglog" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>TradingLog</name>
    <description>
        A mobile app designed to keep track of your trading activities and ease money management by calculating your stats.
    </description>
    <author email="info@tradinglog.com" href="http://tradinglog.com">
        TradingLog Team
    </author>

    <gap:platform name="ios" />

    <content src="index.html" />

    <preference name="android-installLocation" value="auto" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="detect-data-types" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="fullscreen" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="orientation" value="portrait" />
    <preference name="permissions" value="none" />
    <preference name="prerendered-icon" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="stay-in-webview" value="false" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="false" />

    <gap:config-file platform="ios" parent="UISupportedInterfaceOrientations" mode="replace">
        <array>
            <string>UIInterfaceOrientationLandscapeOmg</string>
        </array>
    </gap:config-file>

    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />

    <icon src="icon.png" />
    <!-- iPhone 6 / 6+ -->
    <icon gap:platform="ios" src="www/res/icon/ios/icon-60@3x.png" width="180" height="180" />
    <!-- iPhone / iPod Touch  -->
    <icon gap:platform="ios" src="www/res/icon/ios/icon-60.png" width="60" height="60" />
    <icon gap:platform="ios" src="www/res/icon/ios/icon-60@2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon gap:platform="ios" src="www/res/icon/ios/icon-76.png" width="76" height="76" />
    <icon gap:platform="ios" src="www/res/icon/ios/icon-76@2x.png" width="152" height="152" />
    <!-- Settings Icon -->
    <icon gap:platform="ios" src="www/res/icon/ios/icon-small.png" width="29" height="29" />
    <icon gap:platform="ios" src="www/res/icon/ios/icon-small@2x.png" width="58" height="58" />
    <!-- Spotlight Icon -->
    <icon gap:platform="ios" src="www/res/icon/ios/icon-40.png" width="40" height="40" />
    <icon gap:platform="ios" src="www/res/icon/ios/icon-40@2x.png" width="80" height="80" />

    <gap:splash src="splash.png" />
    <!-- iPhone and iPod touch -->
    <gap:splash gap:platform="ios" src="www/res/screen/ios/Default.png" width="320" height="480" />
    <gap:splash gap:platform="ios" src="www/res/screen/ios/Default@2x.png" width="640" height="960" />
    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash gap:platform="ios" src="www/res/screen/ios/Default-568h@2x.png" width="640" height="1136" />
    <!-- iPhone 6 -->
    <gap:splash gap:platform="ios" src="www/res/screen/ios/Default-667h@2x.png" width="750" height="1334" />
    <gap:splash gap:platform="ios" src="www/res/screen/ios/Default-Portrait-736h@3x.png" width="1242" height="2208" />
    <!-- iPad -->
    <gap:splash gap:platform="ios" src="www/res/screen/ios/Default-Portrait.png" width="768" height="1024" />
    <!-- Retina iPad -->
    <gap:splash gap:platform="ios" src="www/res/screen/ios/Default-Portrait@2x.png" width="1536" height="2048" />

    <access origin="*" />
</widget>
