<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tradinglog" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>TradingLog</name>
    <description>
        A mobile app designed to keep track of your trading activities and ease money management by calculating your stats.
    </description>
    <author email="info@tradinglog.com" href="http://tradinglog.com">
        TradingLog Team
    </author>

    <gap:platform name="ios" />

    <content src="index.html" />

    <preference name="android-installLocation" value="auto" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="fullscreen" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="orientation" value="portrait" />
    <preference name="permissions" value="none" />
    <preference name="prerendered-icon" value="true" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="stay-in-webview" value="false" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="false" />

    <preference name="disallow-overscroll" value="true" />
    <preference name="splash-screen" value="screen" />
    <preference name="splash-screen-delay" value="10000" />

    <gap:config-file platform="ios" parent="UISupportedInterfaceOrientations" mode="replace">
        <array>
            <string>UIInterfaceOrientationLandscapeOmg</string>
        </array>
    </gap:config-file>

    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />

    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon gap:platform="ios" src="img/res/ios/icon/icon-60@3x.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon gap:platform="ios" src="img/res/ios/icon/icon-60.png" width="60" height="60" />
    <icon gap:platform="ios" src="img/res/ios/icon/icon-60@2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon gap:platform="ios" src="img/res/ios/icon/icon-76.png" width="76" height="76" />
    <icon gap:platform="ios" src="img/res/ios/icon/icon-76@2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon gap:platform="ios" src="img/res/ios/icon/icon-40.png" width="40" height="40" />
    <icon gap:platform="ios" src="img/res/ios/icon/icon-40@2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon gap:platform="ios" src="img/res/ios/icon/icon-57.png" width="57" height="57" />
    <icon gap:platform="ios" src="img/res/ios/icon/icon-57@2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon gap:platform="ios" src="img/res/ios/icon/icon-72.png" width="72" height="72" />
    <icon gap:platform="ios" src="img/res/ios/icon/icon-72@2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon gap:platform="ios" src="img/res/ios/icon/icon-29.png" width="29" height="29" />
    <icon gap:platform="ios" src="img/res/ios/icon/icon-29@2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon gap:platform="ios" src="img/res/ios/icon/icon-50.png" width="50" height="50" />
    <icon gap:platform="ios" src="img/res/ios/icon/icon-50@2x.png" width="100" height="100" />
    <!-- images are determined by width and height. The following are supported -->
    <splash gap:platform="ios" src="img/res/ios/splash/splash-iphone.png" width="320" height="480" />
    <splash gap:platform="ios" src="img/res/ios/splash/splash-iphone@2x.png" width="640" height="960" />
    <splash gap:platform="ios" src="img/res/ios/splash/splash-ipad.png" width="768" height="1024" />
    <splash gap:platform="ios" src="img/res/ios/splash/splash-ipad@2x.png" width="1536" height="2048" />
    <splash gap:platform="ios" src="img/res/ios/splash/splash-568h@2x.png" width="640" height="1136" />
    <splash gap:platform="ios" src="img/res/ios/splash/splash-667h.png" width="750" height="1334" />
    <splash gap:platform="ios" src="img/res/ios/splash/splash-736h.png" width="1242" height="2208" />

    <icon src="icon.png" />
    <gap:splash src="splash.png" />

    <access origin="*" />
</widget>
